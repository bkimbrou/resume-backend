{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "required": [
    "employer",
    "title",
    "responsibilities",
    "startDate"
  ],
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "unique identifier for job"
    },
    "employer": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "responsibilities": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "startDate": {
      "type": "string",
      "format": "date"
    },
    "endDate": {
      "type": "string",
      "format": "date"
    }
  }
}